<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_form_ai_token" model="ir.ui.view">
            <field name="name">account.move.form.ai.token</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group" position="after">
                    <group string="AI Token">
                        <field name="ai_token_user_id"/>
                        <field name="ai_token_granted" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
