<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_market_mapper_tree" model="ir.ui.view">
            <field name="name">market_mapper_tree</field>
            <field name="model">vit.market_mapper</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_market_mapper_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>            
            </field>
        </record>
        <!-- form view -->
        <record id="view_market_mapper_form" model="ir.ui.view">
            <field name="name">market_mapper_form</field>
            <field name="model">vit.market_mapper</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_market_mapper_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>
                <xpath expr="//form/sheet/group[last()]" position="after">
                    <group>
                        <field name="create_uid" groups="base.group_system"/>
                    </group>
                </xpath>
                
            </field>
        </record>
        <!-- search -->
        <!--record id="view_market_mapper_search" model="ir.ui.view">
            <field name="name">market_mapper</field>
            <field name="model">vit.market_mapper</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_market_mapper_search"/>
            <field name="arch" type="xml">
            </field>
        </record-->
        <!-- action window -->
        <record id="vit_ads_suhu.action_market_mapper" model="ir.actions.act_window">
            <field name="name">Market Mapper</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.market_mapper</field>
            <field name="view_mode">list,form,kanban,pivot,graph</field>
            <field name="context">{"search_default_group_by_product_value_analysis_id":1, }</field>
            
        </record>

        <!-- <menuitem id="menu_market_mapper" name="Market Mapper" parent="vit_ads_suhu_config_menu" action="action_market_mapper" sequence="30"/> -->
    </data>
</odoo>
