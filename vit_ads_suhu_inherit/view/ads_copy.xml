        <!-- form view -->
        <record id="view_ads_copy_form" model="ir.ui.view">
            <field name="name">ads_copy_form</field>
            <field name="model">vit.ads_copy</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_ads_copy_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>            -->
                <xpath expr="//form/sheet/group[last()]" position="after">
                    <group>
                        <field name="create_uid" groups="base.group_system"/>
                    </group>
                </xpath>

                <xpath expr="//notebook/page[@name='report']/field" position="before">
                    <button type="object" name="generate_output_html" icon="fa-file-text-o">Generate Report</button>
                </xpath>                  
            </field>
        </record>
        <record id="vit_ads_suhu.action_ads_copy" model="ir.actions.act_window">
            <field name="name">Ads Copy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.ads_copy</field>
            <field name="view_mode">list,form</field>
            <field name="context">{
                "search_default_group_by_product_value_analysis_id":1, 
                "search_default_group_by_market_mapper_id":1,
                "search_default_group_by_audience_profiler_id":1,
                "search_default_group_by_angle_hook_id":1,
                "search_default_group_by_hook_id":1,
            }</field>            
        </record>

        <!-- <menuitem id="menu_ads_copy" name="Ads Copy" parent="vit_ads_suhu_config_menu" action="action_ads_copy" sequence="60"/> -->
