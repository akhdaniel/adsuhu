        <!-- tree view -->
        <record id="view_ads_copy_tree_banner" model="ir.ui.view">
            <field name="name">ads_copy_tree_banner</field>
            <field name="model">vit.ads_copy</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_ads_copy_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_ads_copy_form" model="ir.ui.view">
            <field name="name">ads_copy_form</field>
            <field name="model">vit.ads_copy</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_ads_copy_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>           
            </field>
        </record>
