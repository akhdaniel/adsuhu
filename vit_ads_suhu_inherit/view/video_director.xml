<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_video_director_tree" model="ir.ui.view">
            <field name="name">video_director_tree</field>
            <field name="model">vit.video_director</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_video_director_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>            
            </field>
        </record>
        <!-- form view -->
        <record id="view_video_director_form" model="ir.ui.view">
            <field name="name">video_director_form</field>
            <field name="model">vit.video_director</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_video_director_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>     
                <xpath expr="//page[@name='input']" position="replace"/>    
                <xpath expr="//page[@name='instructions']" position="replace"/>    
                <!-- <field name="gpt_prompt_id" position="replace"/> -->
                <field name="gpt_url" position="replace"/>
                <field name="visual_concept_id" position="replace"/>

            </field>
        </record>
