<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_hook_tree_banner" model="ir.ui.view">
            <field name="name">hook_tree_banner</field>
            <field name="model">vit.hook</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_hook_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_hook_form" model="ir.ui.view">
            <field name="name">hook_form</field>
            <field name="model">vit.hook</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_hook_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>
                <xpath expr="//form/sheet/group[last()]" position="after">
                    <group>
                        <field name="create_uid" groups="base.group_system"/>
                    </group>
                </xpath>

                <xpath expr="//page[@name='input']" position="replace"/>    
                <xpath expr="//page[@name='instructions']" position="replace"/>    
                <field name="gpt_prompt_id" position="replace"/>
                <field name="gpt_url" position="replace"/>
            </field>
        </record>
