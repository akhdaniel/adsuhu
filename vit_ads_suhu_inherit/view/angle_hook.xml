<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_angle_hook_tree" model="ir.ui.view">
            <field name="name">angle_hook_tree</field>
            <field name="model">vit.angle_hook</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_angle_hook_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_angle_hook_form" model="ir.ui.view">
            <field name="name">angle_hook_form</field>
            <field name="model">vit.angle_hook</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_angle_hook_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>
            </field>
        </record>
        <!-- search -->
        <!--record id="view_angle_hook_search" model="ir.ui.view">
            <field name="name">angle_hook</field>
            <field name="model">vit.angle_hook</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_angle_hook_search"/>
            <field name="arch" type="xml">
            </field>
        </record-->
        <!-- action window -->
        <record id="vit_ads_suhu.action_angle_hook" model="ir.actions.act_window">
            <field name="name">Angle Hook</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.angle_hook</field>
            <field name="view_mode">list,form,kanban,pivot,graph</field>
            <field name="context">{
    "search_default_group_by_product_value_analysis_id":1, 
    "search_default_group_by_market_mapper_id":1
    "search_default_group_by_audience_profiler_id":1
    }</field>            
        </record>

        <!-- <menuitem id="menu_angle_hook" name="Angle Hook" parent="vit_ads_suhu_config_menu" action="action_angle_hook" sequence="50"/> -->
