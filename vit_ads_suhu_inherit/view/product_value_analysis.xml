<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_product_value_analysis_tree" model="ir.ui.view">
            <field name="name">product_value_analysis_tree</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_product_value_analysis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="js_class">ads_list_with_banner</attribute>
                </xpath>
            </field>
        </record>
        <!-- form view -->
        <record id="view_product_value_analysis_form" model="ir.ui.view">
            <field name="name">product_value_analysis_form</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_product_value_analysis_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">ads_form_with_banner</attribute>
                </xpath>
                <xpath expr="//form/sheet/group[last()]" position="after">
                    <group>
                        <field name="create_uid" groups="base.group_system"/>
                    </group>
                </xpath>

                <xpath expr="//notebook/page[@name='report']/field" position="before">
                    <button type="object" name="generate_output_html" icon="fa-file-text-o">Generate Report</button>
                </xpath>

                <button name="action_generate_report" position="replace"/>
                <button name="action_download_docx" position="replace"/>
                <xpath expr="//notebook/page[@name='final_reports']/group" position="before">
                    <button type="object" name="generate_output_html" icon="fa-file-text-o">Generate Report</button>
                    <button type="object" name="action_download_docx" icon="fa-file-word-o">Download Docx</button>
                </xpath>

            </field>
        </record>
        <!-- search -->
        <!--record id="view_product_value_analysis_search" model="ir.ui.view">
            <field name="name">product_value_analysis</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="inherit_id" ref="vit_ads_suhu.view_vit_product_value_analysis_search"/>
            <field name="arch" type="xml">
            </field>
        </record-->
        <!-- action window -->
        <record id="vit_ads_suhu.action_product_value_analysis" model="ir.actions.act_window">
            <field name="name">Product Value Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.product_value_analysis</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{"search_default_group_by_partner_id":1}</field>
        </record>

        <!-- <menuitem id="menu_product_value_analysis" name="Product Value Analysis" parent="vit_ads_suhu_config_menu" action="action_product_value_analysis" sequence="20"/> -->

    </data>
</odoo>
