<odoo>
<template id="portal_my_home" name="Portal My Home" inherit_id="portal.portal_my_home" priority="50">
    <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
        <t t-set="portal_client_category_enable" t-value="True"/>
    </xpath>
    <div id="portal_client_category" position="inside">
        <t t-call="portal.portal_docs_entry">
            <t t-set="icon" t-value="'/payment/static/img/payment-methods.svg'"/>
            <t t-set="title">Products Analysis</t>
            <t t-set="text">Manage your Product Analysis and Marketing Campaigns</t>
            <t t-set="url" t-value="'/product_analysis'"/>
            <t t-set="config_card" t-value="True"/>
        </t>
        <t t-call="portal.portal_docs_entry">
            <t t-set="icon" t-value="'/web/static/img/folder.svg'"/>
            <t t-set="title">Usage Analysis</t>
            <t t-set="text">View your credit usage history</t>
            <t t-set="url" t-value="'/customer_credits'"/>
            <t t-set="config_card" t-value="True"/>
        </t>
        <t t-call="portal.portal_docs_entry">
            <t t-set="icon" t-value="'/purchase/static/src/img/calculator.vsg'"/>
            <t t-set="title">Top Up</t>
            <t t-set="text">Top up your credits</t>
            <t t-set="url" t-value="'/customer_credits?topup=1'"/>
            <t t-set="config_card" t-value="True"/>
        </t>
    </div>
</template>

<template id="portal_user_dropdown_limit" name="Portal User Limit" inherit_id="portal.user_dropdown" priority="50">
    <xpath expr="//span[@t-if='_user_name']" position="replace">
        <span t-attf-class="#{_user_name_class}">
            <t t-esc="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name"/>
        </span>
        <span class="ms-2 small text-muted d-inline-flex align-items-center gap-1">
            <i class="fa fa-credit-card" aria-hidden="true"/>
            <t t-esc="'%.2f' % (user_id.partner_id.customer_limit or 0)"/>
        </span>
    </xpath>
</template>
</odoo>
