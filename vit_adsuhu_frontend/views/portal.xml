<odoo>
<template id="portal_my_home" name="Portal My Home" inherit_id="portal.portal_my_home" priority="50">
    <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
        <t t-set="portal_client_category_enable" t-value="True"/>
    </xpath>
    <div id="portal_client_category" position="inside">
        <t t-call="portal.portal_docs_entry">
            <t t-set="icon" t-value="'/payment/static/img/payment-methods.svg'"/>
            <t t-set="title">Products Analysis</t>
            <t t-set="text">Manage your Product Analysis and Marketing Campaigns</t>
            <t t-set="url" t-value="'/product_analysis'"/>
            <t t-set="config_card" t-value="True"/>
        </t>
    </div>
</template>
</odoo>