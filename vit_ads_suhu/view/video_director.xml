<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_video_director_tree" model="ir.ui.view">
            <field name="name">vit_video_director_tree</field>
            <field name="model">vit.video_director</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Video Director">
                    <field name="name" /> <!-- 1-->
                    <field name="angle" /> <!-- 100-->
                    <field name="partner_id" /> <!-- 100-->
                    <field name="hook" /> <!-- 101-->
                    <field name="visual_concept_id" /> <!-- 800-->
                    <field name="video_service_id" /> <!-- 900-->
                    <field name="description" /> <!-- 1500-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_video_director_pivot" model="ir.ui.view">
            <field name="name">vit_video_director_tree</field>
            <field name="model">vit.video_director</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Video Director">
                    <field name="visual_concept_id" type="row"/>
                    <field name="video_service_id" type="row"/>
                    <field name="ads_copy_id" type="row"/>
                    <field name="hook_id" type="row"/>
                    <field name="gpt_prompt_id" type="row"/>
                    <field name="lang_id" type="row"/>
                    <field name="partner_id" type="row"/>
                    <field name="gpt_model_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_video_director_form" model="ir.ui.view">
            <field name="name">vit_video_director_form</field>
            <field name="model">vit.video_director</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Video Director">
                    <header>
                        <button string="Generate" type="object" name="action_generate" />
                        <button string="Generate Actor" type="object" name="action_generate_actor" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Video Director Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="angle"  />
                                <field name="hook"  />
                                <field name="active"  />
                                <field name="description"  />
                                <field name="gpt_url" widget="url" />
                                <field name="gpt_session" widget="url" />
                            </group>
                            <group> <!-- right -->
                                <field name="partner_id"  />
                                <field name="hook_id"  />
                                <field name="ads_copy_id"  />
                                <field name="visual_concept_id"  />
                                <field name="video_service_id"  />
                                <field name="gpt_prompt_id"  />
                                <field name="lang_id"  />
                                <field name="gpt_model_id"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="video_variant_ids" string="Video Variant">
                                <field name="video_variant_ids" >
                                    <list >
                                        <field name="name" /> <!-- 100-->
                                        <field name="video_url" widget="video_player"/> <!-- 103-->
                                    </list>
                                </field>
                            </page>
                            <page name="video_script_ids" string="Video Script">
                                <field name="video_script_ids" >
                                    <list >
                                        <field name="name" /> <!-- 100-->
                                        <field name="duration" /> <!-- 101-->
                                        <field name="script" /> <!-- 102-->
                                        <field name="prompt" /> <!-- 103-->
                                    </list>
                                </field>
                            </page>
                            <page name="actor" string="Actor">
                                <group>
                                    <field name="main_actor" filename="main_actor_filename" widget="image" />
                                    <field name="main_actor_filename" invisible="1" />
                                    <field name="main_character" />
                                    <field name="main_actor_url" />
                                </group>
                            </page>
                            <page name="output" string="Output">
                                    <field name="output" widget="json_viewer" />
                            </page>
                            <page name="input" string="Input">
                                    <field name="input" widget="md_viewer" />
                            </page>
                            <page name="instructions" string="Instructions">
                                <group>
                                    <field name="general_instruction" />
                                    <field name="specific_instruction" />
                                </group>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_video_director_search" model="ir.ui.view">
            <field name="name">vit_video_director</field>
            <field name="model">vit.video_director</field>
            <field name="arch" type="xml">
                <search string="Video Director">

                    <filter string="Angle" name="filter_by_angle" domain="[('angle','=','')]" />
                    <filter string="Hook" name="filter_by_hook" domain="[('hook','=','')]" />
                    <filter string="Main Actor" name="filter_by_main_actor" domain="[('main_actor','=','')]" />
                    <filter string="Main Actor Filename" name="filter_by_main_actor_filename" domain="[('main_actor_filename','=','')]" />
                    <filter string="Main Character" name="filter_by_main_character" domain="[('main_character','=','')]" />
                    <filter string="Main Actor Url" name="filter_by_main_actor_url" domain="[('main_actor_url','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Output" name="filter_by_output" domain="[('output','=','')]" />
                    <filter string="Input" name="filter_by_input" domain="[('input','=','')]" />
                    <filter string="GPT URL" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <filter string="General Instruction" name="filter_by_general_instruction" domain="[('general_instruction','=','')]" />
                    <filter string="Specific Instruction" name="filter_by_specific_instruction" domain="[('specific_instruction','=','')]" />
                    <filter string="Active" name="filter_by_active" domain="[('active','=','')]" />
                    <filter string="GPT Session URL" name="filter_by_gpt_session" domain="[('gpt_session','=','')]" />
                    <field name="angle" string="Angle" select="True"/>
                    <field name="hook" string="Hook" select="True"/>
                    <field name="main_actor" string="Main Actor" select="True"/>
                    <field name="main_actor_filename" string="Main Actor Filename" select="True"/>
                    <field name="main_character" string="Main Character" select="True"/>
                    <field name="main_actor_url" string="Main Actor Url" select="True"/>
                    <field name="name" string="Name" select="True"/>
                    <field name="output" string="Output" select="True"/>
                    <field name="input" string="Input" select="True"/>
                    <field name="gpt_url" string="GPT URL" select="True"/>
                    <field name="description" string="Description" select="True"/>
                    <field name="general_instruction" string="General Instruction" select="True"/>
                    <field name="specific_instruction" string="Specific Instruction" select="True"/>
                    <field name="active" string="Active" select="True"/>
                    <field name="gpt_session" string="GPT Session URL" select="True"/>
                    <field name="partner_id" string="Partner" select="True"/>
                    <field name="hook_id" string="Hook" select="True"/>
                    <field name="ads_copy_id" string="Ads Copy" select="True"/>
                    <field name="visual_concept_id" string="Visual Concept" select="True"/>
                    <field name="video_service_id" string="Video Service" select="True"/>
                    <field name="gpt_prompt_id" string="GPT Prompt" select="True"/>
                    <field name="lang_id" string="Lang" select="True"/>
                    <field name="gpt_model_id" string="GPT Model" select="True"/>
                    <group string="Group By..">
                        <filter string="Partner" domain="[]" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
                        <filter string="Hook" domain="[]" name="group_by_hook_id" context="{'group_by':'hook_id'}"/>
                        <filter string="Ads Copy" domain="[]" name="group_by_ads_copy_id" context="{'group_by':'ads_copy_id'}"/>
                        <filter string="Visual Concept" domain="[]" name="group_by_visual_concept_id" context="{'group_by':'visual_concept_id'}"/>
                        <filter string="Video Service" domain="[]" name="group_by_video_service_id" context="{'group_by':'video_service_id'}"/>
                        <filter string="GPT Prompt" domain="[]" name="group_by_gpt_prompt_id" context="{'group_by':'gpt_prompt_id'}"/>
                        <filter string="Lang" domain="[]" name="group_by_lang_id" context="{'group_by':'lang_id'}"/>
                        <filter string="GPT Model" domain="[]" name="group_by_gpt_model_id" context="{'group_by':'gpt_model_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_video_director_kanban" model="ir.ui.view" >
            <field name="name">vit_video_director</field>
            <field name="model">vit.video_director</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_video_director_graph" model="ir.ui.view">
            <field name="name">vit_video_director</field>
            <field name="model">vit.video_director</field>
            <field name="arch" type="xml">
                <graph string="Video Director" type="bar">
                    <field name="visual_concept_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_video_director" model="ir.actions.act_window">
            <field name="name">Video Director</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.video_director</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Video Director
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_video_director" name="Video Director" parent="vit_ads_suhu_config_menu" action="action_video_director" sequence="170"/>
    </data>
</odoo>