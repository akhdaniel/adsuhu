<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_gpt_prompt_tree" model="ir.ui.view">
            <field name="name">vit_gpt_prompt_tree</field>
            <field name="model">vit.gpt_prompt</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Gpt Prompt">
                    <field name="name" /> <!-- 100-->
                    <field name="gpt_url" widget="url"/> <!-- 101-->
                    <field name="system_prompt" /> <!-- 102-->
                    <field name="user_prompt" /> <!-- 103-->
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_gpt_prompt_form" model="ir.ui.view">
            <field name="name">vit_gpt_prompt_form</field>
            <field name="model">vit.gpt_prompt</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Gpt Prompt">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Gpt Prompt Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="gpt_url" widget="url" />
                                <field name="system_prompt"  />
                                <field name="user_prompt"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_gpt_prompt_search" model="ir.ui.view">
            <field name="name">vit_gpt_prompt</field>
            <field name="model">vit.gpt_prompt</field>
            <field name="arch" type="xml">
                <search string="Gpt Prompt">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Gpt Url" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="System Prompt" name="filter_by_system_prompt" domain="[('system_prompt','=','')]" />
                    <filter string="User Prompt" name="filter_by_user_prompt" domain="[('user_prompt','=','')]" />
                    <field name="name" string="Name" select="True"/>
                    <field name="gpt_url" string="Gpt Url" select="True"/>
                    <field name="system_prompt" string="System Prompt" select="True"/>
                    <field name="user_prompt" string="User Prompt" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_gpt_prompt_kanban" model="ir.ui.view" >
            <field name="name">vit_gpt_prompt</field>
            <field name="model">vit.gpt_prompt</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_gpt_prompt" model="ir.actions.act_window">
            <field name="name">Gpt Prompt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.gpt_prompt</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Gpt Prompt
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_gpt_prompt" name="Gpt Prompt" parent="vit_ads_suhu_config_menu" action="action_gpt_prompt" sequence="130"/>
    </data>
</odoo>