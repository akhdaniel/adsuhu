<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_product_value_analysis_tree" model="ir.ui.view">
            <field name="name">vit_product_value_analysis_tree</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Product Value Analysis">
                    <field name="name" /> <!-- 1-->
                    <field name="partner_id" optional="hide"/> <!-- 100-->
                    <field name="target_market" optional="hide"/> <!-- 106-->
                    <field name="description" /> <!-- 1500-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_product_value_analysis_pivot" model="ir.ui.view">
            <field name="name">vit_product_value_analysis_tree</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Product Value Analysis">
                    <field name="write_gpt_prompt_id" type="row"/>
                    <field name="gpt_prompt_id" type="row"/>
                    <field name="lang_id" type="row"/>
                    <field name="partner_id" type="row"/>
                    <field name="gpt_model_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_product_value_analysis_form" model="ir.ui.view">
            <field name="name">vit_product_value_analysis_form</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Product Value Analysis">
                    <header>
                        <button string="Fetch Product Description" type="object" name="action_fetch_product_description" />
                        <button string="Write With Ai" type="object" name="action_write_with_ai" />
                        <button string="Generate" type="object" name="action_generate"  confirm="Are you sure to re-generate Product Analysis Output?"/>
                        <button string="Generate Report" type="object" name="action_generate_report" />
                        <button string="Download Docx" type="object" name="action_download_docx" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_detail_market_mapper_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="market_mapper_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Market Mappers</span>
                                </div>
                            </button>
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Product Value Analysis Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="product_url"  />
                                <field name="report_template_filename" invisible="True" />
                                <field name="active"  />
                                <field name="report_docx_filename" invisible="True" />
                                <field name="target_market" optional="hide" />
                                <field name="tags"  />
                                <field name="description"  />
                                <field name="gpt_url" widget="url" />
                                <field name="gpt_session" widget="url" />
                            </group>
                            <group> <!-- right -->
                                <field name="write_gpt_prompt_id"  />
                                <field name="partner_id" optional="hide" />
                                <field name="gpt_prompt_id"  />
                                <field name="lang_id"  />
                                <field name="gpt_model_id"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="features" string="Features">
                                    <field name="features" />
                            </page>
                            <page name="reports" string="Reports">
                                <group>
                                    <field name="final_report" widget="md_viewer" />
                                    <field name="report_template" filename="report_template_filename" />
                                    <field name="report_docx" filename="report_docx_filename" />
                                </group>
                            </page>
                            <page name="output" string="Output">
                                    <field name="output" widget="json_viewer" />
                            </page>
                            <page name="input" string="Input">
                                    <field name="input" widget="md_viewer" />
                            </page>
                            <page name="instructions" string="Instructions">
                                <group>
                                    <field name="general_instruction" />
                                    <field name="specific_instruction" />
                                </group>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_product_value_analysis_search" model="ir.ui.view">
            <field name="name">vit_product_value_analysis</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="arch" type="xml">
                <search string="Product Value Analysis">

                    <filter string="Product Url" name="filter_by_product_url" domain="[('product_url','=','')]" />
                    <filter string="Features" name="filter_by_features" domain="[('features','=','')]" />
                    <filter string="Final Report" name="filter_by_final_report" domain="[('final_report','=','')]" />
                    <filter string="Report Template" name="filter_by_report_template" domain="[('report_template','=','')]" />
                    <filter string="Report Template Filename" name="filter_by_report_template_filename" domain="[('report_template_filename','=','')]" />
                    <filter string="Report Docx" name="filter_by_report_docx" domain="[('report_docx','=','')]" />
                    <filter string="Report Docx Filename" name="filter_by_report_docx_filename" domain="[('report_docx_filename','=','')]" />
                    <filter string="Target Market" name="filter_by_target_market" domain="[('target_market','=','')]" />
                    <filter string="Tags" name="filter_by_tags" domain="[('tags','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Output" name="filter_by_output" domain="[('output','=','')]" />
                    <filter string="Input" name="filter_by_input" domain="[('input','=','')]" />
                    <filter string="GPT URL" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <filter string="General Instruction" name="filter_by_general_instruction" domain="[('general_instruction','=','')]" />
                    <filter string="Specific Instruction" name="filter_by_specific_instruction" domain="[('specific_instruction','=','')]" />
                    <filter string="Active" name="filter_by_active" domain="[('active','=','')]" />
                    <filter string="GPT Session URL" name="filter_by_gpt_session" domain="[('gpt_session','=','')]" />
                    <field name="product_url" string="Product Url" select="True"/>
                    <field name="features" string="Features" select="True"/>
                    <field name="final_report" string="Final Report" select="True"/>
                    <field name="report_template" string="Report Template" select="True"/>
                    <field name="report_template_filename" string="Report Template Filename" select="True"/>
                    <field name="report_docx" string="Report Docx" select="True"/>
                    <field name="report_docx_filename" string="Report Docx Filename" select="True"/>
                    <field name="target_market" string="Target Market" select="True"/>
                    <field name="tags" string="Tags" select="True"/>
                    <field name="name" string="Name" select="True"/>
                    <field name="output" string="Output" select="True"/>
                    <field name="input" string="Input" select="True"/>
                    <field name="gpt_url" string="GPT URL" select="True"/>
                    <field name="description" string="Description" select="True"/>
                    <field name="general_instruction" string="General Instruction" select="True"/>
                    <field name="specific_instruction" string="Specific Instruction" select="True"/>
                    <field name="active" string="Active" select="True"/>
                    <field name="gpt_session" string="GPT Session URL" select="True"/>
                    <field name="write_gpt_prompt_id" string="Write Gpt Prompt" select="True"/>
                    <field name="partner_id" string="Partner" select="True"/>
                    <field name="gpt_prompt_id" string="GPT Prompt" select="True"/>
                    <field name="lang_id" string="Lang" select="True"/>
                    <field name="gpt_model_id" string="GPT Model" select="True"/>
                    <group string="Group By..">
                        <filter string="Write Gpt Prompt" domain="[]" name="group_by_write_gpt_prompt_id" context="{'group_by':'write_gpt_prompt_id'}"/>
                        <filter string="Partner" domain="[]" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
                        <filter string="GPT Prompt" domain="[]" name="group_by_gpt_prompt_id" context="{'group_by':'gpt_prompt_id'}"/>
                        <filter string="Lang" domain="[]" name="group_by_lang_id" context="{'group_by':'lang_id'}"/>
                        <filter string="GPT Model" domain="[]" name="group_by_gpt_model_id" context="{'group_by':'gpt_model_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_product_value_analysis_kanban" model="ir.ui.view" >
            <field name="name">vit_product_value_analysis</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_product_value_analysis_graph" model="ir.ui.view">
            <field name="name">vit_product_value_analysis</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="arch" type="xml">
                <graph string="Product Value Analysis" type="bar">
                    <field name="write_gpt_prompt_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_product_value_analysis" model="ir.actions.act_window">
            <field name="name">Product Value Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.product_value_analysis</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Product Value Analysis
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_product_value_analysis" name="Product Value Analysis" parent="vit_ads_suhu_config_menu" action="action_product_value_analysis" sequence="20"/>
    </data>
</odoo>