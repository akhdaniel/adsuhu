<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_image_prompt_tree" model="ir.ui.view">
            <field name="name">vit_image_prompt_tree</field>
            <field name="model">vit.image_prompt</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Image Prompt">
                    <field name="prompt" /> <!-- 100-->
                    <field name="visual_concept_id" /> <!-- 100-->
                    <field name="image_generator_id" /> <!-- 101-->
                    <field name="name" /> <!-- 103-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_image_prompt_pivot" model="ir.ui.view">
            <field name="name">vit_image_prompt_tree</field>
            <field name="model">vit.image_prompt</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Image Prompt">
                    <field name="visual_concept_id" type="row"/>
                    <field name="image_generator_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_image_prompt_form" model="ir.ui.view">
            <field name="name">vit_image_prompt_form</field>
            <field name="model">vit.image_prompt</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Image Prompt">
                    <header>
                        <button string="undefined" type="object" name="action_generate_image" />
                        <button string="undefined" type="object" name="action_generate_video" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Image Prompt Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="prompt"  />
                                <field name="image" filename="image_filename" widget="image" />
                                <field name="image_filename" invisible="1" />
                            </group>
                            <group> <!-- right -->
                                <field name="visual_concept_id"  />
                                <field name="image_generator_id"  />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_image_prompt_search" model="ir.ui.view">
            <field name="name">vit_image_prompt</field>
            <field name="model">vit.image_prompt</field>
            <field name="arch" type="xml">
                <search string="Image Prompt">

                    <filter string="Prompt" name="filter_by_prompt" domain="[('prompt','=','')]" />
                    <filter string="Image" name="filter_by_image" domain="[('image','=','')]" />
                    <filter string="Image Filename" name="filter_by_image_filename" domain="[('image_filename','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="prompt" select="True"/>
                    <field name="image" select="True"/>
                    <field name="image_filename" select="True"/>
                    <field name="name" select="True"/>
                    <field name="visual_concept_id" select="True"/>
                    <field name="image_generator_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Visual Concept" domain="[]" name="group_by_visual_concept_id" context="{'group_by':'visual_concept_id'}"/>
                        <filter string="Image Generator" domain="[]" name="group_by_image_generator_id" context="{'group_by':'image_generator_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_image_prompt_kanban" model="ir.ui.view" >
            <field name="name">vit_image_prompt</field>
            <field name="model">vit.image_prompt</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_image m-2">
                                <field name="image" widget="image" alt="Rooms" options="{'img_class': 'w-100 object-fit-contain'}" invisible="not image"/>
                            </aside>
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_image_prompt_graph" model="ir.ui.view">
            <field name="name">vit_image_prompt</field>
            <field name="model">vit.image_prompt</field>
            <field name="arch" type="xml">
                <graph string="Image Prompt" type="bar">
                    <field name="visual_concept_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_image_prompt" model="ir.actions.act_window">
            <field name="name">Image Prompt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.image_prompt</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Image Prompt
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_image_prompt" name="Image Prompt" parent="vit_ads_suhu_config_menu" action="action_image_prompt" sequence="140"/>
    </data>
</odoo>