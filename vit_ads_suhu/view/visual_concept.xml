<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_visual_concept_tree" model="ir.ui.view">
            <field name="name">vit_visual_concept_tree</field>
            <field name="model">vit.visual_concept</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Visual Concept">
                    <field name="name" /> <!-- 1-->
                    <field name="angle" /> <!-- 100-->
                    <field name="hook" /> <!-- 101-->
                    <field name="description" /> <!-- 1500-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_visual_concept_pivot" model="ir.ui.view">
            <field name="name">vit_visual_concept_tree</field>
            <field name="model">vit.visual_concept</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Visual Concept">
                    <field name="script_writer_id" type="row"/>
                    <field name="ads_copy_id" type="row"/>
                    <field name="audience_profiler_id" type="row"/>
                    <field name="gpt_prompt_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_visual_concept_form" model="ir.ui.view">
            <field name="name">vit_visual_concept_form</field>
            <field name="model">vit.visual_concept</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Visual Concept">
                    <header>
                        <button string="Generate" type="object" name="action_generate" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_detail_compliance_checker_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="compliance_checker_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Compliances</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_detail_image_prompt_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="image_prompt_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Image Prompts</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_detail_video_director_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="video_director_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Videos</span>
                                </div>
                            </button>
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Visual Concept Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="angle"  />
                                <field name="hook"  />
                                <field name="description"  />
                                <field name="gpt_url" widget="url" />
                            </group>
                            <group> <!-- right -->
                                <field name="script_writer_id"  />
                                <field name="gpt_prompt_id"  />
                                <field name="ads_copy_id"  />
                                <field name="audience_profiler_id"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="output" string="Output">
                                <field name="output" widget="md_viewer" />
                            </page>
                            <page name="input" string="Input">
                                <field name="input" widget="md_viewer" />
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_visual_concept_search" model="ir.ui.view">
            <field name="name">vit_visual_concept</field>
            <field name="model">vit.visual_concept</field>
            <field name="arch" type="xml">
                <search string="Visual Concept">

                    <filter string="Angle" name="filter_by_angle" domain="[('angle','=','')]" />
                    <filter string="Hook" name="filter_by_hook" domain="[('hook','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Output" name="filter_by_output" domain="[('output','=','')]" />
                    <filter string="Input" name="filter_by_input" domain="[('input','=','')]" />
                    <filter string="Gpt Url" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <field name="angle" select="True"/>
                    <field name="hook" select="True"/>
                    <field name="name" select="True"/>
                    <field name="output" select="True"/>
                    <field name="input" select="True"/>
                    <field name="gpt_url" select="True"/>
                    <field name="description" select="True"/>
                    <field name="script_writer_id" select="True"/>
                    <field name="ads_copy_id" select="True"/>
                    <field name="audience_profiler_id" select="True"/>
                    <field name="gpt_prompt_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Script Writer" domain="[]" name="group_by_script_writer_id" context="{'group_by':'script_writer_id'}"/>
                        <filter string="Ads Copy" domain="[]" name="group_by_ads_copy_id" context="{'group_by':'ads_copy_id'}"/>
                        <filter string="Audience Profiler" domain="[]" name="group_by_audience_profiler_id" context="{'group_by':'audience_profiler_id'}"/>
                        <filter string="Gpt Prompt" domain="[]" name="group_by_gpt_prompt_id" context="{'group_by':'gpt_prompt_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_visual_concept_kanban" model="ir.ui.view" >
            <field name="name">vit_visual_concept</field>
            <field name="model">vit.visual_concept</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_visual_concept_graph" model="ir.ui.view">
            <field name="name">vit_visual_concept</field>
            <field name="model">vit.visual_concept</field>
            <field name="arch" type="xml">
                <graph string="Visual Concept" type="bar">
                    <field name="script_writer_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_visual_concept" model="ir.actions.act_window">
            <field name="name">Visual Concept</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.visual_concept</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Visual Concept
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_visual_concept" name="Visual Concept" parent="vit_ads_suhu_config_menu" action="action_visual_concept" sequence="80"/>
    </data>
</odoo>