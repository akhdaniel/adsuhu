<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_image_variant_tree" model="ir.ui.view">
            <field name="name">vit_image_variant_tree</field>
            <field name="model">vit.image_variant</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Image Variant">
                    <field name="name" /> <!-- 100-->
                    <field name="image_generator_id" /> <!-- 100-->
                    <field name="auto_post_period_id" /> <!-- 101-->
                    <field name="image_url" /> <!-- 103-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_image_variant_pivot" model="ir.ui.view">
            <field name="name">vit_image_variant_tree</field>
            <field name="model">vit.image_variant</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Image Variant">
                    <field name="image_generator_id" type="row"/>
                    <field name="auto_post_period_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_image_variant_form" model="ir.ui.view">
            <field name="name">vit_image_variant_form</field>
            <field name="model">vit.image_variant</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Image Variant">
                    <header>
                        <button string="Post Linkedin" type="object" name="action_post_linkedin" />
                        <button string="Post Facebook" type="object" name="action_post_facebook" />
                        <button string="Post IG" type="object" name="action_post_ig" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Image Variant Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="image" filename="image_filename" widget="image" />
                                <field name="auto_post_period_id"  />
                                <field name="image_filename" invisible="1" />
                                <field name="image_url"  />
                                <field name="is_autopost"  />
                                <field name="autopost_time" widget="float_time" />
                            </group>
                            <group> <!-- right -->
                                <field name="image_generator_id"  />
                                <field name="headline"  />
                                <field name="primary_text"  />
                                <field name="cta"  />
                                <field name="tags"  />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_image_variant_search" model="ir.ui.view">
            <field name="name">vit_image_variant</field>
            <field name="model">vit.image_variant</field>
            <field name="arch" type="xml">
                <search string="Image Variant">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Image" name="filter_by_image" domain="[('image','=','')]" />
                    <filter string="Image Filename" name="filter_by_image_filename" domain="[('image_filename','=','')]" />
                    <filter string="Is Autopost" name="filter_by_is_autopost" domain="[('is_autopost','=','')]" />
                    <filter string="Autopost Time" name="filter_by_autopost_time" domain="[('autopost_time','=','')]" />
                    <filter string="Headline" name="filter_by_headline" domain="[('headline','=','')]" />
                    <filter string="Primary Text" name="filter_by_primary_text" domain="[('primary_text','=','')]" />
                    <filter string="CTA" name="filter_by_cta" domain="[('cta','=','')]" />
                    <filter string="Tags" name="filter_by_tags" domain="[('tags','=','')]" />
                    <field name="name" string="Name" select="True"/>
                    <field name="image" string="Image" select="True"/>
                    <field name="image_filename" string="Image Filename" select="True"/>
                    <field name="is_autopost" string="Is Autopost" select="True"/>
                    <field name="autopost_time" string="Autopost Time" select="True"/>
                    <field name="headline" string="Headline" select="True"/>
                    <field name="primary_text" string="Primary Text" select="True"/>
                    <field name="cta" string="CTA" select="True"/>
                    <field name="tags" string="Tags" select="True"/>
                    <field name="image_generator_id" string="Image Generator" select="True"/>
                    <field name="auto_post_period_id" string="Auto Post Period" select="True"/>
                    <group string="Group By..">
                        <filter string="Image Generator" domain="[]" name="group_by_image_generator_id" context="{'group_by':'image_generator_id'}"/>
                        <filter string="Auto Post Period" domain="[]" name="group_by_auto_post_period_id" context="{'group_by':'auto_post_period_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_image_variant_kanban" model="ir.ui.view" >
            <field name="name">vit_image_variant</field>
            <field name="model">vit.image_variant</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_image m-2">
                                <field name="image" widget="image" alt="Rooms" options="{'img_class': 'w-100 object-fit-contain'}" invisible="not image"/>
                            </aside>
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_image_variant_graph" model="ir.ui.view">
            <field name="name">vit_image_variant</field>
            <field name="model">vit.image_variant</field>
            <field name="arch" type="xml">
                <graph string="Image Variant" type="bar">
                    <field name="image_generator_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_image_variant" model="ir.actions.act_window">
            <field name="name">Image Variant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.image_variant</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Image Variant
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_image_variant" name="Image Variant" parent="vit_ads_suhu_config_menu" action="action_image_variant" sequence="190"/>
    </data>
</odoo>