<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_compliance_checker_tree" model="ir.ui.view">
            <field name="name">vit_compliance_checker_tree</field>
            <field name="model">vit.compliance_checker</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Compliance Checker">
                    <field name="name" /> <!-- 1-->
                    <field name="angle" /> <!-- 100-->
                    <field name="hook" /> <!-- 101-->
                    <field name="description" /> <!-- 1500-->
                    <field name="partner_id" /> <!-- 4000-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_compliance_checker_pivot" model="ir.ui.view">
            <field name="name">vit_compliance_checker_tree</field>
            <field name="model">vit.compliance_checker</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Compliance Checker">
                    <field name="visual_concept_id" type="row"/>
                    <field name="ads_copy_id" type="row"/>
                    <field name="gpt_prompt_id" type="row"/>
                    <field name="lang_id" type="row"/>
                    <field name="partner_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_compliance_checker_form" model="ir.ui.view">
            <field name="name">vit_compliance_checker_form</field>
            <field name="model">vit.compliance_checker</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Compliance Checker">
                    <header>
                        <button string="Generate" type="object" name="action_generate" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_detail_landing_page_builder_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="landing_page_builder_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Landing Pages</span>
                                </div>
                            </button>
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Compliance Checker Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="angle"  />
                                <field name="hook"  />
                                <field name="active"  />
                                <field name="description"  />
                                <field name="gpt_url" widget="url" />
                                <field name="gpt_session" widget="url" />
                            </group>
                            <group> <!-- right -->
                                <field name="visual_concept_id"  />
                                <field name="gpt_prompt_id"  />
                                <field name="ads_copy_id"  />
                                <field name="lang_id"  />
                                <field name="partner_id"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="output" string="Output">
                                    <field name="output" widget="md_viewer" />
                            </page>
                            <page name="input" string="Input">
                                    <field name="input" widget="md_viewer" />
                            </page>
                            <page name="instructions" string="Instructions">
                                <group>
                                    <field name="general_instruction" />
                                    <field name="specific_instruction" />
                                </group>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_compliance_checker_search" model="ir.ui.view">
            <field name="name">vit_compliance_checker</field>
            <field name="model">vit.compliance_checker</field>
            <field name="arch" type="xml">
                <search string="Compliance Checker">

                    <filter string="Angle" name="filter_by_angle" domain="[('angle','=','')]" />
                    <filter string="Hook" name="filter_by_hook" domain="[('hook','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Output" name="filter_by_output" domain="[('output','=','')]" />
                    <filter string="Input" name="filter_by_input" domain="[('input','=','')]" />
                    <filter string="Gpt Url" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <filter string="General Instruction" name="filter_by_general_instruction" domain="[('general_instruction','=','')]" />
                    <filter string="Specific Instruction" name="filter_by_specific_instruction" domain="[('specific_instruction','=','')]" />
                    <filter string="Active" name="filter_by_active" domain="[('active','=','')]" />
                    <filter string="Gpt Session" name="filter_by_gpt_session" domain="[('gpt_session','=','')]" />
                    <field name="angle" select="True"/>
                    <field name="hook" select="True"/>
                    <field name="name" select="True"/>
                    <field name="output" select="True"/>
                    <field name="input" select="True"/>
                    <field name="gpt_url" select="True"/>
                    <field name="description" select="True"/>
                    <field name="general_instruction" select="True"/>
                    <field name="specific_instruction" select="True"/>
                    <field name="active" select="True"/>
                    <field name="gpt_session" select="True"/>
                    <field name="visual_concept_id" select="True"/>
                    <field name="ads_copy_id" select="True"/>
                    <field name="gpt_prompt_id" select="True"/>
                    <field name="lang_id" select="True"/>
                    <field name="partner_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Visual Concept" domain="[]" name="group_by_visual_concept_id" context="{'group_by':'visual_concept_id'}"/>
                        <filter string="Ads Copy" domain="[]" name="group_by_ads_copy_id" context="{'group_by':'ads_copy_id'}"/>
                        <filter string="Gpt Prompt" domain="[]" name="group_by_gpt_prompt_id" context="{'group_by':'gpt_prompt_id'}"/>
                        <filter string="Lang" domain="[]" name="group_by_lang_id" context="{'group_by':'lang_id'}"/>
                        <filter string="Partner" domain="[]" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_compliance_checker_kanban" model="ir.ui.view" >
            <field name="name">vit_compliance_checker</field>
            <field name="model">vit.compliance_checker</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_compliance_checker_graph" model="ir.ui.view">
            <field name="name">vit_compliance_checker</field>
            <field name="model">vit.compliance_checker</field>
            <field name="arch" type="xml">
                <graph string="Compliance Checker" type="bar">
                    <field name="visual_concept_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_compliance_checker" model="ir.actions.act_window">
            <field name="name">Compliance Checker</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.compliance_checker</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Compliance Checker
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_compliance_checker" name="Compliance Checker" parent="vit_ads_suhu_config_menu" action="action_compliance_checker" sequence="90"/>
    </data>
</odoo>