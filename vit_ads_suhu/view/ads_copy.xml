<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_ads_copy_tree" model="ir.ui.view">
            <field name="name">vit_ads_copy_tree</field>
            <field name="model">vit.ads_copy</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Ads Copy">
                    <field name="name" /> <!-- 1-->
                    <field name="hook_no" /> <!-- 100-->
                </list>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_ads_copy_pivot" model="ir.ui.view">
            <field name="name">vit_ads_copy_tree</field>
            <field name="model">vit.ads_copy</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Ads Copy">
                    <field name="angle_hook_id" type="row"/>
                    <field name="audience_profiler_id" type="row"/>
                    <field name="gpt_prompt_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_ads_copy_form" model="ir.ui.view">
            <field name="name">vit_ads_copy_form</field>
            <field name="model">vit.ads_copy</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Ads Copy">
                    <header>
                        <button string="Generate" type="object" name="action_generate" />
                        <button string="Create Images" type="object" name="action_create_images" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_detail_script_writer_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="script_writer_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Scripts</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_detail_image_generator_ids" class="oe_stat_button" icon="fa-search" >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="image_generator_ids_count" />
                                    </span>
                                    <span class="o_stat_text">Images</span>
                                </div>
                            </button>
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Ads Copy Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="hook_no"  />
                                <field name="gpt_url" widget="url" />
                            </group>
                            <group> <!-- right -->
                                <field name="angle_hook_id"  />
                                <field name="gpt_prompt_id"  />
                                <field name="audience_profiler_id"  />
                            </group>
                        </group>
                        <notebook>
                            <page name="output" string="Output">
                                <field name="output" widget="md_viewer" />
                            </page>
                            <page name="input" string="Input">
                                <field name="input" widget="md_viewer" />
                            </page>
                            <page name="description" string="Description">
                                <field name="description"  />
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_ads_copy_search" model="ir.ui.view">
            <field name="name">vit_ads_copy</field>
            <field name="model">vit.ads_copy</field>
            <field name="arch" type="xml">
                <search string="Ads Copy">

                    <filter string="Hook No" name="filter_by_hook_no" domain="[('hook_no','=','')]" />
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Output" name="filter_by_output" domain="[('output','=','')]" />
                    <filter string="Input" name="filter_by_input" domain="[('input','=','')]" />
                    <filter string="Gpt Url" name="filter_by_gpt_url" domain="[('gpt_url','=','')]" />
                    <filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
                    <field name="hook_no" select="True"/>
                    <field name="name" select="True"/>
                    <field name="output" select="True"/>
                    <field name="input" select="True"/>
                    <field name="gpt_url" select="True"/>
                    <field name="description" select="True"/>
                    <field name="angle_hook_id" select="True"/>
                    <field name="audience_profiler_id" select="True"/>
                    <field name="gpt_prompt_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Angle Hook" domain="[]" name="group_by_angle_hook_id" context="{'group_by':'angle_hook_id'}"/>
                        <filter string="Audience Profiler" domain="[]" name="group_by_audience_profiler_id" context="{'group_by':'audience_profiler_id'}"/>
                        <filter string="Gpt Prompt" domain="[]" name="group_by_gpt_prompt_id" context="{'group_by':'gpt_prompt_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_ads_copy_kanban" model="ir.ui.view" >
            <field name="name">vit_ads_copy</field>
            <field name="model">vit.ads_copy</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="card" class="flex-row">
                            <main class="p-2">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_ads_copy_graph" model="ir.ui.view">
            <field name="name">vit_ads_copy</field>
            <field name="model">vit.ads_copy</field>
            <field name="arch" type="xml">
                <graph string="Ads Copy" type="bar">
                    <field name="angle_hook_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_ads_copy" model="ir.actions.act_window">
            <field name="name">Ads Copy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.ads_copy</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Ads Copy
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_ads_copy" name="Ads Copy" parent="vit_ads_suhu_config_menu" action="action_ads_copy" sequence="60"/>
    </data>
</odoo>