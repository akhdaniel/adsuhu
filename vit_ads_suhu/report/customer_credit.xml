<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_customer_credit" model="ir.actions.report">
            <field name="name">Customer Credit</field>
            <field name="model">vit.customer_credit</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_customer_credit_report</field>
            <field name="report_file">vit_ads_suhu.vit_customer_credit_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_customer_credit"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_customer_credit_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Customer Credit: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Date Time</strong>
                            <p class="m-0" t-field="doc.date_time" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Credit</strong>
                            <p class="m-0" t-field="doc.credit" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Is Usage</strong>
                            <p class="m-0" t-field="doc.is_usage" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>State</strong>
                            <p class="m-0" t-field="doc.state" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ref</strong>
                            <p class="m-0" t-field="doc.ref" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Customer</strong>
                            <p class="m-0" t-field="doc.customer_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_customer_credit_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_customer_credit_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>