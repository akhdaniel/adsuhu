<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_image_generator" model="ir.actions.report">
            <field name="name">Image Generator</field>
            <field name="model">vit.image_generator</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_image_generator_report</field>
            <field name="report_file">vit_ads_suhu.vit_image_generator_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_image_generator"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_image_generator_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Image Generator: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ratio</strong>
                            <p class="m-0" t-field="doc.ratio" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Angle</strong>
                            <p class="m-0" t-field="doc.angle" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hook</strong>
                            <p class="m-0" t-field="doc.hook" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ads Copy No</strong>
                            <p class="m-0" t-field="doc.ads_copy_no" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Image Prompt</strong>
                            <p class="m-0" t-field="doc.image_prompt_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visual Concept</strong>
                            <p class="m-0" t-field="doc.visual_concept_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ads Copy</strong>
                            <p class="m-0" t-field="doc.ads_copy_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hook</strong>
                            <p class="m-0" t-field="doc.hook_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Image Variant</h2>
                <table class="table table-sm o_main_table" name="image_variant_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Image</td>
                            <td>Image Filename</td>
                            <td>Image Url</td>
                            <td>Is Autopost</td>
                            <td>Autopost Time</td>
                            <td>Headline</td>
                            <td>Primary Text</td>
                            <td>Cta</td>
                            <td>Tags</td>
                            <td>Image Generator</td>
                            <td>Auto Post Period</td>
                        </tr>
                    </thead>
                    <tbody class="image_variant_ids_tbody">
                        <tr t-foreach="doc.image_variant_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.image" /></td>
                            <td><span t-field="line.image_filename" /></td>
                            <td><span t-field="line.image_url" /></td>
                            <td><span t-field="line.is_autopost" /></td>
                            <td><span t-field="line.autopost_time" /></td>
                            <td><span t-field="line.headline" /></td>
                            <td><span t-field="line.primary_text" /></td>
                            <td><span t-field="line.cta" /></td>
                            <td><span t-field="line.tags" /></td>
                            <td><span t-field="line.image_generator_id" /></td>
                            <td><span t-field="line.auto_post_period_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_image_generator_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_image_generator_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>