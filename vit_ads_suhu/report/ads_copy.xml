<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_ads_copy" model="ir.actions.report">
            <field name="name">Ads Copy</field>
            <field name="model">vit.ads_copy</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_ads_copy_report</field>
            <field name="report_file">vit_ads_suhu.vit_ads_copy_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_ads_copy"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_ads_copy_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Ads Copy: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Angle</strong>
                            <p class="m-0" t-field="doc.angle" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hook</strong>
                            <p class="m-0" t-field="doc.hook" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hook No</strong>
                            <p class="m-0" t-field="doc.hook_no" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Audience Profiler</strong>
                            <p class="m-0" t-field="doc.audience_profiler_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Product Value Analysis</strong>
                            <p class="m-0" t-field="doc.product_value_analysis_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Hook</strong>
                            <p class="m-0" t-field="doc.hook_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Angle Hook</strong>
                            <p class="m-0" t-field="doc.angle_hook_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Script Writer</h2>
                <table class="table table-sm o_main_table" name="script_writer_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Angle</td>
                            <td>Hook</td>
                            <td>Ads Copy</td>
                            <td>Angle Hook</td>
                        </tr>
                    </thead>
                    <tbody class="script_writer_ids_tbody">
                        <tr t-foreach="doc.script_writer_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.angle" /></td>
                            <td><span t-field="line.hook" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                            <td><span t-field="line.angle_hook_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Visual Concept</h2>
                <table class="table table-sm o_main_table" name="visual_concept_id_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Angle</td>
                            <td>Hook</td>
                            <td>Script Writer</td>
                            <td>Ads Copy</td>
                            <td>Audience Profiler</td>
                        </tr>
                    </thead>
                    <tbody class="visual_concept_id_tbody">
                        <tr t-foreach="doc.visual_concept_id" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.angle" /></td>
                            <td><span t-field="line.hook" /></td>
                            <td><span t-field="line.script_writer_id" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                            <td><span t-field="line.audience_profiler_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Landing Page Builder</h2>
                <table class="table table-sm o_main_table" name="landing_page_builder_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Angle</td>
                            <td>Hook</td>
                            <td>Compliance Checker</td>
                            <td>Ads Copy</td>
                            <td>Audience Profiler</td>
                            <td>Product Value Analysis</td>
                        </tr>
                    </thead>
                    <tbody class="landing_page_builder_ids_tbody">
                        <tr t-foreach="doc.landing_page_builder_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.angle" /></td>
                            <td><span t-field="line.hook" /></td>
                            <td><span t-field="line.compliance_checker_id" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                            <td><span t-field="line.audience_profiler_id" /></td>
                            <td><span t-field="line.product_value_analysis_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Image Generator</h2>
                <table class="table table-sm o_main_table" name="image_generator_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Ratio</td>
                            <td>Angle</td>
                            <td>Hook</td>
                            <td>Image Prompt</td>
                            <td>Visual Concept</td>
                            <td>Ads Copy</td>
                            <td>Hook</td>
                        </tr>
                    </thead>
                    <tbody class="image_generator_ids_tbody">
                        <tr t-foreach="doc.image_generator_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.ratio" /></td>
                            <td><span t-field="line.angle" /></td>
                            <td><span t-field="line.hook" /></td>
                            <td><span t-field="line.image_prompt_id" /></td>
                            <td><span t-field="line.visual_concept_id" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                            <td><span t-field="line.hook_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Video Director</h2>
                <table class="table table-sm o_main_table" name="video_director_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Visual Concept</td>
                            <td>Video Service</td>
                            <td>Ads Copy</td>
                        </tr>
                    </thead>
                    <tbody class="video_director_ids_tbody">
                        <tr t-foreach="doc.video_director_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.visual_concept_id" /></td>
                            <td><span t-field="line.video_service_id" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_ads_copy_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_ads_copy_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>