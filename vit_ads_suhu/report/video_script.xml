<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_video_script" model="ir.actions.report">
            <field name="name">Video Script</field>
            <field name="model">vit.video_script</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_video_script_report</field>
            <field name="report_file">vit_ads_suhu.vit_video_script_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_video_script"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_video_script_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Video Script: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Duration</strong>
                            <p class="m-0" t-field="doc.duration" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visuals</strong>
                            <p class="m-0" t-field="doc.visuals" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Text Overlay</strong>
                            <p class="m-0" t-field="doc.text_overlay" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Voice Over</strong>
                            <p class="m-0" t-field="doc.voice_over" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Video Director</strong>
                            <p class="m-0" t-field="doc.video_director_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_video_script_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_video_script_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>