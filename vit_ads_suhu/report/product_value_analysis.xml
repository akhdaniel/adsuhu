<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_product_value_analysis" model="ir.actions.report">
            <field name="name">Product Value Analysis</field>
            <field name="model">vit.product_value_analysis</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_product_value_analysis_report</field>
            <field name="report_file">vit_ads_suhu.vit_product_value_analysis_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_product_value_analysis"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_product_value_analysis_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Product Value Analysis: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Product Url</strong>
                            <p class="m-0" t-field="doc.product_url" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Features</strong>
                            <p class="m-0" t-field="doc.features" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Final Report</strong>
                            <p class="m-0" t-field="doc.final_report" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Report Template</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Report Template Filename</strong>
                            <p class="m-0" t-field="doc.report_template_filename" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Report Docx</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Report Docx Filename</strong>
                            <p class="m-0" t-field="doc.report_docx_filename" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Market Mapper</h2>
                <table class="table table-sm o_main_table" name="market_mapper_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Target Market</td>
                            <td>Product Value Analysis</td>
                        </tr>
                    </thead>
                    <tbody class="market_mapper_ids_tbody">
                        <tr t-foreach="doc.market_mapper_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.target_market" /></td>
                            <td><span t-field="line.product_value_analysis_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_product_value_analysis_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_product_value_analysis_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>