<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_compliance_checker" model="ir.actions.report">
            <field name="name">Compliance Checker</field>
            <field name="model">vit.compliance_checker</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_compliance_checker_report</field>
            <field name="report_file">vit_ads_suhu.vit_compliance_checker_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_compliance_checker"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_compliance_checker_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Compliance Checker: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visual Concept</strong>
                            <p class="m-0" t-field="doc.visual_concept_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ads Copy</strong>
                            <p class="m-0" t-field="doc.ads_copy_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Landing Page Builder</h2>
                <table class="table table-sm o_main_table" name="landing_page_builder_ids_table">
                    <thead>
                        <tr>
                            <td> Name</td>
                            <td> Inherit</td>
                            <td>Compliance Checker</td>
                            <td>Ads Copy</td>
                            <td>Audience Profiler</td>
                            <td>Product Value Analysis</td>
                        </tr>
                    </thead>
                    <tbody class="landing_page_builder_ids_tbody">
                        <tr t-foreach="doc.landing_page_builder_ids" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line._inherit" /></td>
                            <td><span t-field="line.compliance_checker_id" /></td>
                            <td><span t-field="line.ads_copy_id" /></td>
                            <td><span t-field="line.audience_profiler_id" /></td>
                            <td><span t-field="line.product_value_analysis_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_compliance_checker_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_compliance_checker_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>