<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_campaign_builder" model="ir.actions.report">
            <field name="name">Campaign Builder</field>
            <field name="model">vit.campaign_builder</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_campaign_builder_report</field>
            <field name="report_file">vit_ads_suhu.vit_campaign_builder_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_campaign_builder"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_campaign_builder_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Campaign Builder: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Landing Page Builder</strong>
                            <p class="m-0" t-field="doc.landing_page_builder_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Compliance Checker</strong>
                            <p class="m-0" t-field="doc.compliance_checker_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visual Concept</strong>
                            <p class="m-0" t-field="doc.visual_concept_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Script Writer</strong>
                            <p class="m-0" t-field="doc.script_writer_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ads Copy</strong>
                            <p class="m-0" t-field="doc.ads_copy_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_campaign_builder_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_campaign_builder_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>