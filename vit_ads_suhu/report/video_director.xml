<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_video_director" model="ir.actions.report">
            <field name="name">Video Director</field>
            <field name="model">vit.video_director</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_ads_suhu.vit_video_director_report</field>
            <field name="report_file">vit_ads_suhu.vit_video_director_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_ads_suhu.model_vit_video_director"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_ads_suhu.vit_video_director_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Video Director: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visual Concept</strong>
                            <p class="m-0" t-field="doc.visual_concept_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Video Service</strong>
                            <p class="m-0" t-field="doc.video_service_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Ads Copy</strong>
                            <p class="m-0" t-field="doc.ads_copy_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Video Variant</h2>
                <table class="table table-sm o_main_table" name="video_variant_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Video</td>
                            <td>Video Filename</td>
                            <td>Video Url</td>
                            <td>Video Director</td>
                        </tr>
                    </thead>
                    <tbody class="video_variant_ids_tbody">
                        <tr t-foreach="doc.video_variant_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.video" /></td>
                            <td><span t-field="line.video_filename" /></td>
                            <td><span t-field="line.video_url" /></td>
                            <td><span t-field="line.video_director_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Video Script</h2>
                <table class="table table-sm o_main_table" name="video_script_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Duration</td>
                            <td>Visuals</td>
                            <td>Text Overlay</td>
                            <td>Voice Over</td>
                            <td>Video Director</td>
                        </tr>
                    </thead>
                    <tbody class="video_script_ids_tbody">
                        <tr t-foreach="doc.video_script_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.duration" /></td>
                            <td><span t-field="line.visuals" /></td>
                            <td><span t-field="line.text_overlay" /></td>
                            <td><span t-field="line.voice_over" /></td>
                            <td><span t-field="line.video_director_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_ads_suhu.vit_video_director_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_ads_suhu.vit_video_director_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>